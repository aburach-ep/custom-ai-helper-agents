{
    "info": {
        "name": "Employee-Postman-tests",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "8f1f4b4e-3f7a-4a9e-b3e6-7a6f3b8e3c21"
    },
    "variable": [
        { "key": "baseUrl", "value": "http://localhost:8080" },
        { "key": "id", "value": "1" },
        { "key": "name", "value": "John Doe" },
        { "key": "jobTitle", "value": "Senior Software Engineer" }
    ],
    "item": [
        {
            "name": "Employees",
            "item": [
                {
                    "name": "Get Employees",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/employees",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees" ]
                        }
                    }
                },
                {
                    "name": "Add Employee",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"email\": \"alice.johnson@example.com\",\n  \"jobTitle\": \"QA Engineer\",\n  \"compensation\": {\n    \"baseSalary\": 90000,\n    \"bonus\": 8000,\n    \"stockOptions\": 300\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/employees",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees" ]
                        }
                    }
                },
                {
                    "name": "Find Employee By ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/{{id}}",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees", "{{id}}" ]
                        }
                    }
                },
                {
                    "name": "Find Employee By Name",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/search?name={{name}}",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees", "search" ],
                            "query": [
                                { "key": "name", "value": "{{name}}" }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Compensation",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"baseSalary\": 120000,\n  \"bonus\": 15000,\n  \"stockOptions\": 1000\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/{{id}}/compensation",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees", "{{id}}", "compensation" ]
                        }
                    }
                },
                {
                    "name": "Update Job Title",
                    "request": {
                        "method": "PATCH",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/{{id}}/job-title?jobTitle={{jobTitle}}",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees", "{{id}}", "job-title" ],
                            "query": [
                                { "key": "jobTitle", "value": "{{jobTitle}}" }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Employee",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/employees/{{id}}",
                            "host": [ "{{baseUrl}}" ],
                            "path": [ "api", "employees", "{{id}}" ]
                        }
                    }
                }
            ]
        }
    ]
}
